    /* C */
    for (int i=0; i != num_users; ++i)
        if (session_expired (users[i]))
            logout (users[i]);

    # Perl
    logout ($_) for grep { session_expired ($_) } @users;

    ; Scheme
    (for-each logout (filter session_expired? users))

    // C++
    for_each (users | filtered (session_expired), logout);


